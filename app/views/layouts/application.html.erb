<!DOCTYPE html>
<html>
<head>
  <title>Portfolio</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Roboto:400,100,500,700' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
</head>
<body>

  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <a class="navbar-brand" href="<%= root_path %>">Adam Podraza</a>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li><%= link_to 'Portfolio', portfolio_path %></li>
          <li><%= link_to 'Blog', 'http://www.adampodraza.blogspot.com' %></li>

        </ul>

        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to 'Welcome', 'pages#welcome' %></li>

        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

<%= yield %>

<div class="footer">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
      </div>
      <div class="col-md-6">
        <div class="row pull-right">
          <div class="col-md-4">

          </div>
          <div class="col-md-4">
            <a href="https://github.com/apodraz2"><%=image_tag("cat6.png", size: "25x25", style:"margin-top:10px;") %> </a>
          </div>
          <div class="col-md-4">
            <a href="https://www.linkedin.com/in/adampodraza"><%=image_tag("linkedin11.png", size: "25x25", style:"margin-top:10px;") %></a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

</body>
</html>
